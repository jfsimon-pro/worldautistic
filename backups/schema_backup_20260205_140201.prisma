generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Achievement {
  id              String            @id
  name            String
  description     String
  icon            String
  type            AchievementType
  criteria        Json
  points          Int               @default(0)
  nameEn          String?
  nameEs          String?
  descriptionEn   String?
  descriptionEs   String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime
  UserAchievement UserAchievement[]

  @@index([type])
}

model Activity {
  id               String             @id
  type             ActivityType
  level            DifficultyLevel
  componentName    String
  title            String
  description      String?
  titleEn          String?
  titleEs          String?
  descriptionEn    String?
  descriptionEs    String?
  config           Json?
  estimatedTime    Int?
  maxAttempts      Int                @default(5)
  isActive         Boolean            @default(true)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime
  ActivityProgress ActivityProgress[]

  @@index([isActive])
  @@index([level])
  @@index([type])
}

model ActivityProgress {
  id               String    @id
  userId           String
  activityId       String
  attempts         Int       @default(0)
  correctAnswers   Int       @default(0)
  incorrectAnswers Int       @default(0)
  completionTime   Int?
  score            Float     @default(0)
  isCompleted      Boolean   @default(false)
  lastAttemptAt    DateTime  @default(now())
  completedAt      DateTime?
  metadata         Json?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime
  Activity         Activity  @relation(fields: [activityId], references: [id], onDelete: Cascade)
  User             User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, activityId, lastAttemptAt])
  @@index([activityId])
  @@index([isCompleted])
  @@index([userId])
}

model AppSettings {
  id          String   @id
  key         String   @unique
  value       Json
  description String?
  updatedAt   DateTime
  updatedBy   String?
}

model Card {
  id          String       @id
  category    CardCategory
  identifier  String       @unique
  namePt      String
  nameEn      String
  nameEs      String
  imageUrl    String
  audioPt     String?
  audioEn     String?
  audioEs     String?
  color       String
  borderColor String
  textColor   String?
  order       Int          @default(0)
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime

  @@index([category])
  @@index([isActive])
}

model DailyActivity {
  id                  String   @id
  userId              String
  date                DateTime @db.Date
  activitiesCompleted Int      @default(0)
  gamesPlayed         Int      @default(0)
  totalTimeSpent      Int      @default(0)
  correctAnswers      Int      @default(0)
  incorrectAnswers    Int      @default(0)
  mathActivities      Int      @default(0)
  langActivities      Int      @default(0)
  cardsViewed         Int      @default(0)
  frequenciesListened Int      @default(0)
  createdAt           DateTime @default(now())
  updatedAt           DateTime

  @@unique([userId, date])
  @@index([date])
  @@index([userId])
}

model Frequency {
  id                String            @id
  categoryId        String
  name              String
  description       String?
  frequency         String
  publicId          String            @unique
  secureUrl         String
  duration          Int?
  order             Int               @default(0)
  isActive          Boolean           @default(true)
  playCount         Int               @default(0)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime
  FrequencyCategory FrequencyCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
  @@index([isActive])
}

model FrequencyCategory {
  id            String      @id
  name          String      @unique
  description   String?
  nameEn        String?
  nameEs        String?
  descriptionEn String?
  descriptionEs String?
  assetFolder   String
  icon          String?
  order         Int         @default(0)
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime
  Frequency     Frequency[]

  @@index([isActive])
}

model Game {
  id            String         @id
  name          String
  type          GameType
  description   String?
  nameEn        String?
  nameEs        String?
  descriptionEn String?
  descriptionEs String?
  config        Json?
  imageUrl      String?
  minAge        Int?
  maxDuration   Int?
  isActive      Boolean        @default(true)
  isDraft       Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime
  GameProgress  GameProgress[]

  @@index([isActive])
  @@index([type])
}

model GameProgress {
  id           String   @id
  userId       String
  gameId       String
  attempts     Int      @default(0)
  wins         Int      @default(0)
  losses       Int      @default(0)
  bestScore    Int      @default(0)
  bestTime     Int?
  lastPlayedAt DateTime @default(now())
  metadata     Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  Game         Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
  @@index([gameId])
  @@index([userId])
}

model Notification {
  id        String           @id
  userId    String
  type      NotificationType
  title     String
  message   String
  data      Json?
  isRead    Boolean          @default(false)
  readAt    DateTime?
  createdAt DateTime         @default(now())

  @@index([createdAt])
  @@index([isRead])
  @@index([userId])
}

model Purchase {
  id                   String         @id
  userId               String
  hotmartTransactionId String         @unique
  hotmartProductId     String
  productName          String
  buyerEmail           String
  buyerName            String
  buyerDocument        String?
  amount               Float
  currency             String         @default("BRL")
  status               PurchaseStatus @default(APPROVED)
  purchaseDate         DateTime
  approvedDate         DateTime?
  refundedDate         DateTime?
  isRecurrent          Boolean        @default(false)
  subscriptionId       String?
  subscriptionStatus   String?
  metadata             Json?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime
  User                 User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([hotmartTransactionId])
  @@index([purchaseDate])
  @@index([status])
  @@index([userId])
}

model RefreshToken {
  id        String   @id
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
  @@index([token])
  @@index([userId])
}

model Story {
  id            String      @id
  type          ContentType
  title         String
  content       String
  titleEn       String?
  titleEs       String?
  contentEn     String?
  contentEs     String?
  coverImage    String?
  images        Json?
  targetAge     String?
  tags          String[]
  estimatedTime Int?
  isActive      Boolean     @default(true)
  isDraft       Boolean     @default(false)
  publishedAt   DateTime?
  authorId      String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime

  @@index([isActive])
  @@index([isDraft])
  @@index([type])
}

model User {
  id                    String             @id
  email                 String             @unique
  passwordHash          String
  name                  String
  role                  Role               @default(USER)
  avatar                String?
  dateOfBirth           DateTime?
  language              String             @default("pt")
  soundEnabled          Boolean            @default(true)
  createdAt             DateTime           @default(now())
  updatedAt             DateTime
  lastLoginAt           DateTime?
  hasActiveSubscription Boolean            @default(false)
  subscriptionExpiresAt DateTime?
  subscriptionStatus    String?            @default("inactive")
  ActivityProgress      ActivityProgress[]
  GameProgress          GameProgress[]
  Purchase              Purchase[]
  RefreshToken          RefreshToken[]
  UserAchievement       UserAchievement[]
  UserStreak            UserStreak?

  @@index([email])
  @@index([hasActiveSubscription])
  @@index([role])
  @@index([subscriptionStatus])
}

model UserAchievement {
  id            String      @id
  userId        String
  achievementId String
  unlockedAt    DateTime    @default(now())
  Achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)
  User          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
}

model UserStreak {
  id             String   @id
  userId         String   @unique
  currentStreak  Int      @default(0)
  longestStreak  Int      @default(0)
  lastActiveDate DateTime @default(now())
  updatedAt      DateTime
  User           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Whitelist {
  id        String   @id
  email     String   @unique
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime
}

enum AchievementType {
  ACTIVITY_COMPLETION
  STREAK
  PERFECT_SCORE
  TIME_BASED
  CATEGORY_MASTER
  SPECIAL
}

enum ActivityType {
  MATH_ADDITION
  MATH_SUBTRACTION
  MATH_MULTIPLICATION
  MATH_DIVISION
  MATH_COMPARISON
  MATH_SEQUENCES
  LANG_LETTER_RECOGNITION
  LANG_WORD_BUILDING
  LANG_READING_COMPREHENSION
}

enum CardCategory {
  ANIMALS
  FOOD
  OBJECTS
  COLORS
  COMMANDS
}

enum ContentType {
  STORY
  ROUTINE
  SOCIAL_SCRIPT
}

enum DifficultyLevel {
  LEVEL_1
  LEVEL_2
  LEVEL_3
}

enum GameType {
  MEMORY_GAME
  PUZZLE
  MATCHING
  SORTING
}

enum NotificationType {
  ACHIEVEMENT
  REMINDER
  PROGRESS_REPORT
  SYSTEM
}

enum PurchaseStatus {
  APPROVED
  COMPLETE
  CANCELED
  REFUNDED
  CHARGEBACK
  EXPIRED
}

enum Role {
  ADMIN
  USER
}
